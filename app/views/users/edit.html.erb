<div class="container">
<div class="row">
  <div class="mx-auto">
    <br>
<h1>User info</h1>

<br>
<% if @user.errors.any? %>
  <%= @user.errors.count %>件のerrorが発生しました
  <% @user.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<%= form_with model: @user, local:true do |f| %>
<br>
<br>
  <h4>Name</h4>
  <%= f.text_field :name %>
  <h1>Image</h1>
  <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
  <h4>Introduction</h4>
  <%= f.text_area :introduction %>
  <br><%= f.submit 'Update User' %>

<% end %>
</div>
</div>
</div>