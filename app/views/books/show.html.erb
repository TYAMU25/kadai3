<%= flash[:notice] %>

<title>Bookers2Ver2</title>
<body>
  <main>
    <p id="notice"></p>
    <div class="container">
      <div class="row">
        <div class="col-md-3">

          <h2>User info</h2>
          <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
          <table class="table">
            <tbody>
              <tr></tr>
              <tr>
                <th>name</th>
            	  <th><%= @user.name%></th>

              </tr>
              <tr>
            	  <th>introduction</th>
            	  <th><%= @user.introduction%></th>
              </tr>
            </tbody>
          </table>

          <div class="row">
            <%=link_to"" ,edit_user_path(@user),class:"btn btn-outline-secondary btn-block fas fa-user-cog"%>
          </div>

          <h2 class="mt-3">New book</h2>

          <%= form_with model: @mybook, url: books_path, local:true do |f| %>
            <h4>Title</h4>
            <%= f.text_field :title %>
            <h4>本文</h4>
            <%= f.text_area :body %>
            <%= f.submit 'Create Book' %>
          <% end %>
        </div>

        <div class="col-md-8 offset-md-1">
      		<h2>Book detail</h2>
      		<table class="table">
      		  <tbody>
      		    <tr>
                <td>
                  <%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg"%><br>
                  <%= link_to @book.user.name, user_path(@book.user)%>
                </td>
                <td><%= @book.title %></td>
                <td><%= @book.body %></td>
                <%if @book.user==current_user%>
                  <td><%=link_to "Edit",edit_book_path(@book),class:"btn btn-sm btn-success"%></td>
                  <td><%=link_to "Destroy", book_path(@book), method: :delete%></td>
                <%end%>
              </tr>
            </tbody>
          </table>
        </div>
        

      </div>
    </div>
  </main>

  <footer>
    <div class="container mt-5">
    	<div class="row">
      	<div class="mx-auto">
      		<p>CopyRight Infratop.inc</p>
      	</div>
      </div>
    </div>
  </footer>

</body>